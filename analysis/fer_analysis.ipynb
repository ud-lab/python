from pathlib import Path
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

# ===== ユーザー設定 =====
TARGET_FOLDER = r"C:\data\excel_files"   # ★解析したいフォルダを指定
RECURSIVE = True
START_ROW = 46
HIST_BINS = 50
HEATMAP_AGG = "mean"
# =======================


def safe_sheet_name(x: str) -> str:
    s = str(x)
    for ch in ['\\', '/', '*', '[', ']', ':', '?']:
        s = s.replace(ch, '_')
    s = s.strip()
    return s[:31] if s else "UNKNOWN"


def read_excel_data(path: Path) -> pd.DataFrame:
    df = pd.read_excel(
        path,
        engine="openpyxl",
        skiprows=START_ROW - 1,
        usecols="E:G",
        header=None,
    )

    df.columns = ["length", "value", "position"]
    df = df.dropna(how="all")

    df["length"] = pd.to_numeric(df["length"], errors="coerce")
    df["value"] = pd.to_numeric(df["value"], errors="coerce")
    df["position"] = df["position"].astype(str).replace("nan", np.nan)

    return df.dropna(subset=["value", "position"])


def export_excel(df: pd.DataFrame, out_xlsx: Path):
    with pd.ExcelWriter(out_xlsx, engine="openpyxl") as writer:
        df.to_excel(writer, sheet_name="ALL", index=False)

        for pos, g in df.groupby("position"):
            g.sort_values("length").to_excel(
                writer,
                sheet_name=safe_sheet_name(pos),
                index=False
            )


def plot_histograms(df: pd.DataFrame, out_dir: Path):
    out_dir.mkdir(parents=True, exist_ok=True)

    plt.figure()
    plt.hist(df["value"], bins=HIST_BINS)
    plt.title("Overall Distribution")
    plt.xlabel("Value")
    plt.ylabel("Count")
    plt.tight_layout()
    plt.savefig(out_dir / "hist_overall.png", dpi=200)
    plt.close()

    for pos, g in df.groupby("position"):
        plt.figure()
        plt.hist(g["value"], bins=HIST_BINS)
        plt.title(f"Position: {pos}")
        plt.xlabel("Value")
        plt.ylabel("Count")
        plt.tight_layout()
        plt.savefig(out_dir / f"hist_{safe_sheet_name(pos)}.png", dpi=200)
        plt.close()


def plot_heatmap(df: pd.DataFrame, out_dir: Path):
    out_dir.mkdir(parents=True, exist_ok=True)

    pivot = pd.pivot_table(
        df.dropna(subset=["length"]),
        index="length",
        columns="position",
        values="value",
        aggfunc=HEATMAP_AGG
    )

    plt.figure(figsize=(10, 6))
    im = plt.imshow(pivot.values, aspect="auto", origin="upper")
    plt.colorbar(im, label="Value")

    plt.xlabel("Position")
    plt.ylabel("Transport length")
    plt.title("Heatmap (Length × Position)")
    plt.tight_layout()
    plt.savefig(out_dir / "heatmap.png", dpi=200)
    plt.close()

    pivot.to_csv(out_dir / "heatmap_pivot.csv", encoding="utf-8-sig")


def find_excel_files(folder: Path):
    patterns = folder.rglob("*") if RECURSIVE else folder.glob("*")
    return [
        p for p in patterns
        if p.suffix.lower() in {".xlsx", ".xlsm"} and not p.name.startswith("~$")
    ]


def main():
    base = Path(TARGET_FOLDER)
    if not base.exists():
        raise FileNotFoundError(base)

    files = find_excel_files(base)
    print(f"Found {len(files)} Excel files")

    for f in files:
        try:
            print(f"Processing: {f.name}")
            df = read_excel_data(f)

            out_xlsx = base / f"Result_{f.stem}.xlsx"
            plot_dir = base / "plots" / f.stem

            export_excel(df, out_xlsx)
            plot_histograms(df, plot_dir)
            plot_heatmap(df, plot_dir)

            print("  -> OK")
        except Exception as e:
            print(f"  -> NG: {e}")

    print("All done.")


if __name__ == "__main__":
    main()

